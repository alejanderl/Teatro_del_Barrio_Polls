

<h2>Miembros</h2>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
    	<th><%= "memberships.linked_user".t %></th>
    	<th><%= "memberships.email".t %></th>
      	<th><%= "memberships.active".t %></th>
      	<th><%= "global.actions".t %>   </th>
    </tr>
  </thead>
  <tbody>
		<% @memberships.each do |membership|%>
            <tr>
              <td>
              	  <%=  membership.user ? "global._yes".t : "global._no".t  %>
              </td>
              <td>
                <%=   membership.email %>
              </td>
              <td> <%= membership.active %></td>
              <td><%= link_to "global.delete".t, membership_path(membership) , :method => :delete, data:{confirm:"global.are_you_sure?".t} %></td>
              
            </tr>

			
		<%end %>
	</tbody>
</table>
<div class="row">
	<div class= "col-12-md col-12-xs ">
		<%= link_to "global.add".t,"#", :class => "btn btn-md btn-default",
														   :onClick => "$(this).next().removeClass('hidden');$(this.remove())" if allow?("memberships","create") %>
		<div class="hidden ">
			<%= form_for @membership, html:{class:"col-md-5"} do |d| %>
			  <div class="input-group">
			  	<%= d.text_field :email, :class => "form-control col-3-md" ,:placeholder => "memberships.email".t%>
		      	<span class="input-group-btn">
		      		<%= d.submit "global.create".t, :class => "btn btn-primary" %>
		        	
		      	</span>
		      	
		    	</div><!-- /input-group -->
				

			<% end %>
		</div>
	</div>
</div>


