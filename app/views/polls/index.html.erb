

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= "polls.title".t %></th>
      <th><%= "polls.total_questions".t %></th>
      <th><%= "polls.total_answers".t %>   </th>
    </tr>
  </thead>
  <tbody>
		<% @polls.each do |poll|%>


            <tr>
              <td>
                <%= link_to  poll.title, poll %>
                <div class="status pull-right">
                  <% if poll.is_open? %>
                    <span class=" label label-success"><%= "polls.open".t %></span>
                  <%else%>
                    <span class=" label label-warning"><%= "polls.close".t %></span>
                  <%end%>
                </div>
              </td>
              <td><%= poll.questions.count %></td>
              <td><%= poll.questions.first.answers.count   %></td>
            </tr>

			
		<%end %>
	</tbody>
</table>

<%= link_to "global.create".t, new_poll_path, :class => "btn btn-lg btn-default" if allow?("polls","create") %>

