

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th><%= "polls.title".t %></th>
      <th><%= "polls.total_questions".t %></th>
      <th><%= "polls.total_answers".t %>   </th>
    </tr>
  </thead>
  <tbody>
		<% @polls.each do |poll|%>


            <tr>
              <td><%=  poll.title %></td>
              <td><%= poll.questions.count %></td>
              <td><%= poll.questions.first.answers.count   %></td>
            </tr>

			
		<%end %>
	</tbody>
</table>

<%= link_to "global.create".t, new_poll_path %>