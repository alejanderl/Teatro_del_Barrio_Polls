<div id="user_nav">  
  <% if user_signed_in? %>
    
    
    <% if current_user.image.file.present? %>
      <%= link_to (image_tag current_user.image.file_url(:nano_thumb_50)), show_user_path %>  
    <% else %>
        <%= "devise.status.signed_as_%{user_email}_not_you?".t % current_user.email %>. Not you? 
      
    <%= link_to "Sign out", destroy_user_session_path %>
    <% end %>
   
  <% else %>  
    <%= link_to "Sign up", new_user_registration_path %> or  
    <%= link_to "Sign in", new_user_session_path %>  
  <% end %>  
</div>  